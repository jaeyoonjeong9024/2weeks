import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.preprocessing import OrdinalEncoder  # ğŸ‘ˆ ë¬¸ìì—´ì„ ìˆ«ìë¡œ ë³€í™˜í•˜ëŠ” ë„êµ¬ ì¶”ê°€
from sklearn.tree import DecisionTreeClassifier
from sklearn.ensemble import RandomForestClassifier
from sklearn.linear_model import LogisticRegression
from sklearn.metrics import accuracy_score

# -----------------------------
# 1) ë°ì´í„° ì¤€ë¹„
# -----------------------------

# â­ï¸ 1. Car Evaluation ë°ì´í„°ì— ë§ëŠ” ì»¬ëŸ¼ ì´ë¦„ìœ¼ë¡œ ìˆ˜ì •
cols = ['buying', 'maint', 'doors', 'persons', 'lug_boot', 'safety', 'class']

# â­ï¸ 2. íŒŒì¼ ê²½ë¡œë¥¼ car_evaluation.csvë¡œ ë³€ê²½ (íŒŒì¼ì´ Colabì— ì—…ë¡œë“œë˜ì–´ ìˆì–´ì•¼ í•¨)
df = pd.read_csv("/content/drive/MyDrive/car_evaluation.csv", header=None, names=cols)

# ë¬¸ì œì§€(X)ì™€ ì •ë‹µì§€(y) ë¶„ë¦¬ (ì •ë‹µ ì»¬ëŸ¼ ì´ë¦„: 'class')
X = df.drop(columns=["class"])
y = df["class"]

# â­ï¸ 3. ëª¨ë“  ë¬¸ìì—´ ë°ì´í„°ë¥¼ ìˆ«ìë¡œ ë³€í™˜ (ì¸ì½”ë”©)
# 'vhigh'ëŠ” 3, 'high'ëŠ” 2, 'med'ëŠ” 1, 'low'ëŠ” 0ê³¼ ê°™ì´ ìˆ«ìë¡œ ë°”ê¿”ì¤ë‹ˆë‹¤.
encoder = OrdinalEncoder()
X_encoded = encoder.fit_transform(X) # ë¬¸ì œì§€ì˜ ëª¨ë“  ì»¬ëŸ¼ì„ ìˆ«ìë¡œ ë³€í™˜

# â­ï¸ 4. ì¸ì½”ë”©ëœ ë°ì´í„°ë¥¼ í•™ìŠµìš©/í…ŒìŠ¤íŠ¸ìš©ìœ¼ë¡œ ë¶„ë¦¬
X_train, X_test, y_train, y_test = train_test_split(
    X_encoded, y, test_size=0.2, stratify=y, random_state=42
)

# -----------------------------
# 2) ëª¨ë¸ êµ¬ì„± (ì´ì „ê³¼ ë™ì¼)
# -----------------------------
dt = DecisionTreeClassifier(random_state=42)
rf = RandomForestClassifier(n_estimators=200, random_state=42)
lr = LogisticRegression(max_iter=1000) # ë°˜ë³µ íšŸìˆ˜ë¥¼ ëŠ˜ë ¤ ì•ˆì •ì„± í™•ë³´

# -----------------------------
# 3) ëª¨ë¸ í•™ìŠµ (ì´ì „ê³¼ ë™ì¼)
# -----------------------------
# ìˆ«ìë¡œ ë³€í™˜ëœ í•™ìŠµ ë°ì´í„°ë¡œ ëª¨ë¸ë“¤ì„ í•™ìŠµì‹œí‚µë‹ˆë‹¤.
dt.fit(X_train, y_train)
rf.fit(X_train, y_train)
lr.fit(X_train, y_train)

# -----------------------------
# 4) ëª¨ë¸ í‰ê°€ (ì´ì „ê³¼ ë™ì¼)
# -----------------------------
dt_acc = accuracy_score(y_test, dt.predict(X_test))
rf_acc = accuracy_score(y_test, rf.predict(X_test))
lr_acc = accuracy_score(y_test, lr.predict(X_test))

print("=== Test Accuracy ===")
print(f"Decision Tree : {dt_acc:.4f}")
print(f"Random Forest : {rf_acc:.4f}")
print(f"Logistic Reg. : {lr_acc:.4f}")
